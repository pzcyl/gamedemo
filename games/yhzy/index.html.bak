	<script type="text/javascript">
		!function($) {
             // updateShare(0);
			var	$page1 = $('.page1'),
				$page2 = $('.page2'),
				$timeObj = $('.time'),
				$time = $('#time'),
				$score = $('#score'),
				$pop = $('#pop'),
				$musicPlay = $('.icon-play');

			var timer =  function(s) {
				if (s < 0) {
					$pop.show();
					var audio = document.getElementsByTagName('audio')[0];
					audio.pause();
					$("#overtext").text("你一共燃放了"+score+"颗烟花");
					window.myScore = score;
				    // Play68.setRankingScoreDesc(window.myScore);
				    // updateShare(window.myScore);
					return;
				}
				$time.text(s--);

				setTimeout(function() {
					timer(s);
				}, 1000);
			};

			var subPage = function () {
				$timeObj.show();
				timer(15);
				score=0;
				$score.text(score);
				$(".score").show();
				window.myScore = score;
				// Play68.setRankingScoreDesc(window.myScore);
				// updateShare(window.myScore);
				playMusic();
			}

			var playMusic = function() {
				var connection = navigator.connection||navigator.mozConnection||navigator.webkitConnection||{type:'unknown'},
					netType = connection.type;

				if(netType == 2 || netType == 5 || netType == 4) {
					//wifi/3G以上网络添加音乐
					$musicPlay.show();
					
				}
				var audio = document.getElementsByTagName('audio')[0];
				audio.play();
			}

			$('.btn-go').on('click', function() {
				$page1.hide();
				$page2.show();
				subPage();
				return false;
			})	

			$('.btn-back').on('click', function() {
                
				$pop.hide();
				subPage();
				return false;
			})

			$('.btn-share').on('click', function() {
				// play68_submitScore(window.myScore);
				return false;
			})
			$('.btn-more').on('click', function() {
			    // Play68.goHome();
				return false;
			})
			$('.icon-play').on('click', function(e) {
				e.stopPropagation();
				e.preventDefault();
				var $this = $(this),
					audio = document.getElementsByTagName('audio')[0];

				$this.toggleClass('icon-off');
				if ($this.hasClass('icon-off')) {
					audio.currentTime = 0;
					audio.pause();
				} else {
					audio.play();
				}
			})

		}(Zepto);
	</script>
